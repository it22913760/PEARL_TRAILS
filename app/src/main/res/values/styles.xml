<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape overlay to round only the top corners of the featured image -->
    <style name="ShapeOverlayTopRounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Base corner overlay -->
    <style name="ShapeAppearanceOverlay" />
    <style name="ShapeAppearanceOverlay.Material3" />
    <style name="ShapeAppearanceOverlay.Material3.Corner">
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Full rounded corners (used to make avatars circular) -->
    <style name="ShapeAppearanceOverlay.Material3.Corner.Full" parent="ShapeAppearanceOverlay.Material3.Corner">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Project-local circular shape to use directly in layouts -->
    <style name="PearlTrailsCircular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
