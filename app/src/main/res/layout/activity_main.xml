<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Segmented Control removed per user request -->

            <!-- Hero Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/surface">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <!-- Video background (loops). If video missing, fallback image is below. -->
                    <VideoView
                        android:id="@+id/videoHero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgHero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="invisible" />

                    <!-- Dark gradient overlay to increase text contrast -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hero_gradient" />

                    <!-- Centered content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/heroTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Explore the Pearl of the Indian Ocean"
                            android:textColor="@color/text_primary"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/heroSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Discover Sri Lanka's hidden treasures"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExploreHero"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginTop="12dp"
                            android:text="Start Exploring"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            app:backgroundTint="@color/accent_green"
                            app:cornerRadius="22dp" />
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            

            

            <!-- Search field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundColor="@color/chip_bg"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:startIconTint="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Search destinations..."
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/statDestinations"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_stat_card"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pin_outline"
                        android:tint="@color/accent_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="50+"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destinations"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp"/>

                <LinearLayout
                    android:id="@+id/statRating"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_stat_card"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="12dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_outline"
                        android:tint="@color/accent_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="4.8"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Rating"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp"/>

                <LinearLayout
                    android:id="@+id/statProvinces"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_stat_card"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="12dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_leaf_outline"
                        android:tint="@color/accent_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="8"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provinces"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Filter chips -->
            <LinearLayout
                android:id="@+id/llFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAll"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="All"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:cornerRadius="22dp"
                    app:backgroundTint="@color/accent_green"/>
                <Space android:layout_width="8dp" android:layout_height="0dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavorites"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Favorites"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="22dp"
                    app:strokeColor="@color/divider"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@android:color/transparent"/>
            </LinearLayout>

            <!-- Featured header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Featured"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tvFavBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/bg_count_pill"
                        android:text="â¤ 0"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvViewAllFeatured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingEnd="8dp"
                android:paddingStart="2dp"
                tools:listitem="@layout/item_featured" />

            <!-- Popular header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvViewAllPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_popular" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Brand logo to the left of navbar, outside the green pill -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:contentDescription="PearlTrails logo"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/pearltrails_logo_white"
        tools:src="@drawable/pearltrails_logo_black"/>

    <!-- Sticky top navbar (drawn last to be on top) -->
    <LinearLayout
        android:id="@+id/navbarTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_navbar_container"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:elevation="0dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTabHome"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:backgroundTint="@color/accent_green"
            app:rippleColor="@android:color/transparent"
            app:cornerRadius="22dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTabExplore"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Explore"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@android:color/transparent"
            app:cornerRadius="22dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTabProfile"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Profile"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@android:color/transparent"
            app:cornerRadius="22dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>